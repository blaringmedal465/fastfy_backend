generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  clerkId   String   @unique  // Clerk's user ID (primary link)
  email     String   @unique
  username  String?  // Optional, from Clerk
  name      String?  // Keep for future/manual
  createdAt DateTime @default(now())
}